"Databases"
{
    "driver_default"		"mysql"
{% for e in databases %}
    "{{ e.name }}"
    {
            "driver"                        "{{ e.driver }}"
            "host"                          "{{ e.host }}"
            "database"                      "{{ e.database }}"
            "user"                          "{{ e.user }}"
            "pass"                          "{{ e.pass }}"
    }
{% endfor %}
    "storage-local"
    {
        "driver"			"sqlite"
        "database"			"sourcemod-local"
    }

    "clientprefs"
    {
        "driver"			"sqlite"
        "host"				"localhost"
        "database"			"clientprefs-sqlite"
        "user"				"root"
        "pass"				""
        //"timeout"			"0"
