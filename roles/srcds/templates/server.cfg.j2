log on
mp_logdetail "3"

sv_minrate 20000
sv_maxrate 60000
sv_maxupdaterate 66
sv_minupdaterate 40
sv_maxcmdrate 66
sv_mincmdrate 40

sv_client_cmdrate_difference		"20"
net_splitpacket_maxrate		"100000"

// Force client values to be in range
sv_competitive_minspec 1
// Community servers can enable use of the older steam voice codec with sv_use_steam_voice 1
// sv_use_steam_voice 0

sv_client_min_interp_ratio 1
sv_client_max_interp_ratio 2

{% if stv_enable %}
tv_enable 1
tv_autorecord 0
tv_maxclients 5
tv_transmitall 1
tv_delaymapchange 0
tv_delay 0
tv_maxrate 0
tv_port "{{ srcds_base_port + (loop0 * 10) + 1 }}"
tv_allow_camera_man 1
tv_password "{{ stv_password }}"
// Hostname
tv_name "{{ item.name }} | STV"
// In-game name
tv_title "{{ stv_name }}"
{% endif %}

// Server Logging
sv_logbans 1
sv_logecho 0
sv_logfile 1
sv_log_onefile 0
{% if log.net_enable %}
// net log enabled
sv_logsecret {{ item.log_secret }}
{% for host in log.net_hosts %}
logaddress_add {{ host }}
{% endfor %}
{% endif %}

// No spectators team
mp_allowspectators 0
mp_forceautoteam 1

tf_medieval 0
tf_medieval_autorp 0

tf_gravetalk 1
sv_alltalk 0

sv_cheats 0
sv_pausable 0

tf_ctf_bonus_time 0

// Remove random crits
tf_weapon_criticals 0
tf_use_fixed_weaponspreads 1

// Dont spectate other team
mp_forcecamera 1

// Extra time for map voting
mp_enableroundwaittime 1
mp_restartround 0
mp_bonusroundtime 19
mp_chattime 20

// Dont push same team
tf_avoidteammates_pushaway 0

// Rocket jump during preround
tf_preround_push_from_damage_enable 1

// Chat settings
